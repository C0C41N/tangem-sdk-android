<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardSdkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/card_sdk_primary</item>
        <item name="colorOnPrimary">@color/card_sdk_on_primary</item>
        <item name="colorSecondary">@color/card_sdk_secondary</item>
        <item name="colorOnSecondary">@color/card_sdk_on_secondary</item>
        <item name="bottomSheetDialogTheme">@style/SdkBottomSheetDialogStyle</item>
    </style>

    <style name="SdkTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_text_text_color</item>
    </style>

    <style name="SdkBottomSheetDialogStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>